<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="1dp">

    <LinearLayout
        android:layout_gravity="end"
        android:layout_width="match_parent"
        android:id="@+id/message_right"
        android:visibility="visible"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="3dp">

            <ImageView
                android:id="@+id/avatar2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="2dp"

                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@mipmap/ic_launcher" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="right">

            <androidx.cardview.widget.CardView

                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"


                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorGray"

                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:contentPadding="10dp">

                <TextView
                    android:id="@+id/content_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:text="试学压电试学压电学压电"
                    android:textSize="20dp" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="3dp">

            <ImageView

                android:id="@+id/avatar_right"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="2dp"
                app:srcCompat="@mipmap/ic_launcher" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/message_left"
        android:visibility="visible"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="3dp">

            <ImageView
                android:id="@+id/avatar_left"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="2dp"

                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:visibility="visible"
                app:srcCompat="@mipmap/ic_launcher" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="left">

            <androidx.cardview.widget.CardView

                android:id="@+id/cardView555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"


                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorGray"

                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:contentPadding="10dp">

                <TextView
                    android:id="@+id/content_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:text="试y好学压学压电"
                    android:textSize="20dp" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="3dp">

            <ImageView

                android:id="@+id/avatar55"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@mipmap/ic_launcher" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>